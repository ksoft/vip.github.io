<beans xmlns="http://www.springframework.org/schema/beans" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
    http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd
    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<!-- 一般需要修改; name：应用名，全局唯一，小写；-->
	<dubbo:application name="jlt-datasync-gy"/>
	<!-- 用dubbo协议在20890端口暴露服务 -->
    <dubbo:protocol name="hessian" port="30925"/>
    <!-- 服务消费者缺省值配置, timeout远程服务调用超时时间(毫秒) -->
    <dubbo:consumer timeout="-1" retries="0" check="false"/>

    <dubbo:annotation package="com.jlt.datasync"/>
	
	<import resource="classpath:META-INF/spring/dubbo-consumer-ums.xml"/>

</beans>
